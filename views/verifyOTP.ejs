<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/style.ejs') %>  
    <style>
        body{
        background-image: url("images/background2.jpg");
        background-clip: text;
        font-weight: 600;
    }
        h1{
            margin-inline:auto;
            margin-top: 30vh;
            width: fit-content;
        }
        .body{
            display: flex;
        }
        .left,.right{
            width: 50vw;
            height: 100vh;
            margin-top: 0px;
        }
        .verificationCard{
            width: 18rem; 
            margin-inline: auto; 
            margin-top: 23vh;
        }
        @media(max-width:400px){
        h1{
            padding-top: 3vh;
            margin-inline:auto;
            width: fit-content;
            margin-top: 0px;
        }
        .body{
            display: block;
        }
        .left{
            width: 100%;
            height: 20vh;
            margin-top: 7vh;
        }
        .right{
            width: 100%;
            height: 40vh;
        }
        .verificationCard{
            width: 18rem; 
            margin-inline: auto; 
            margin-top: 10%;
        }
        }
    </style>
</head>
<body>
    <div class="body">
        <div class="left" style="background-color: grey;">
            <h1>
                Bloggs
            </h1>
        </div>
        <div class="right">
            <% if (locals.error) { %>
                <div class="alert alert-danger" role="alert">
                  Incorrect OTP
                </div>
              <% } %>
            <div class="card verificationCard" >
                <div class="card-body">
                  <h5 class="card-title">OTP VERIFICATION</h5>
                  <form action="/user/verification" method="post">
                    <p class="card-text">Enter the OTP send to your registered Email.</p>
                    <label class="form-label" style="margin-left: 15px;">Enter OTP</label>
                    <input type="form" class="form-control" aria-describedby="emailHelp" name="otp">
                    <button class="btn btn-primary" style="margin: 15px;">Submit</button>
                  </form>
                </div>
              </div>
        </div>
    </div>


    <%- include('../partials/script') %>
</body>
</html>